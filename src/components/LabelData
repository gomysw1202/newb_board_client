import React from "react";



const LabelInput = (props) => {
    let param = props.param;
    return(
        <>
            <label>{param.caption}</label>
            <Input {...props}/>
        </>
    )
}

const Input = (props) => {
    let param = props.param || props;
    let type = param.type || "text";

    return (
        <input defaultValue={param.defaultValue} value={param.value}></input>
    )
}


export {LabelInput, Input}